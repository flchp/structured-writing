<div class="col-md-12">
  <div class="post">

    <%= link_to("Back to index", account_posts_path, class: "btn btn-primary") %>

    <%= link_to("Edit post", edit_account_post_path(@post), class: "btn btn-primary") %>

  </div>

  <h3>
    <%= @post.title %>
  </h3>
  <h5>
    <%= @post.created_at.strftime("%Y-%b-%d   %H:%M") %>
  </h5>
  <p>
    <%= simple_format(@post.content) %>
  </p>
</div>

