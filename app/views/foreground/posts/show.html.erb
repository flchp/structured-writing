<div class="col-md-12">
  <div class="post">

    <%= link_to("回到文章列表", foreground_posts_path, class: "btn btn-primary") %>

  </div>

  <div>
    <h3>
      <%= @post.title %>
    </h3>
    <h4>
      <%= @post.created_at.strftime("%Y-%b-%d   %H:%M") %>
    </h4>
    <h4>
      <label class="label label-default">浏览量：<%= @post.post_read_amount %></label>
      <label class="label label-info">评论量：<%= @post.comments.count %></label>
    </h4>
    <p>
      <%= simple_format(@post.content) %>
    </p>
    <h5>
      转发价值文章 共享进步快乐<%= social_share_button_tag(@post.title, :allow_sites => %w(wechat weibo)) %>
    </h5>
  </div>

  <hr>
  <h4>评论区</h4>
  <h5>发表评论</h5>
  <div>
    <%= simple_form_for [:foreground, @post, Comment.new] do |f| %>

      <div class="group">
        <%= f.input :comment %>
      </div>

      <%= f.submit "Submit", :class => "btn btn-primary", data: { disable_with: "Submitting..." } %>

    <% end %>
  </div>
  <div>
    <h5>评论列表</h5>
    <table class="table table-bordered">
      <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= comment.user.email %>
          </td>
          <td>
            <%= comment.created_at.strftime("%Y-%b-%d   %H:%M") %>
          </td>
          <td>
            <%= comment.comment %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

</div>

